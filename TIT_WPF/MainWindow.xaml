<Window x:Class="TIT_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TIT_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBox FontSize="20" Margin="25" Name="tbPath"/>
            <Button x:Name="btnShow" Content="Enter" Margin="5" Width="100" FontSize="20" Click="btnShow_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <ListBox x:Name="lbInfo" FontSize="20" Margin="15"/>
        </StackPanel>
    </Grid>
</Window>
